@model VentasApp.Models.Producto
@{
    ViewBag.Title = "AddProduct";
}

<h2>Agregar producto</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Id, "ProductosSelect", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ProductoSelect", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <br />

        <input type="submit" value="Guardar Producto" id="NewPedido" class="btn btn-primary" />

    </div>
}


